@model WebRecomendationControlApp.ViewModels.ReviewViewModel

@{
    ViewData["Title"] = @Localizer["CreateReview"];
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Localizer["CreateReview"]</h2>
<div class="row">
	<div class="col-md-4">
		<form method="post" asp-controller="Review" asp-action="Create" enctype="multipart/form-data">
			<input value="@ViewBag.userId" name="userId" hidden />
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<partial name="_EditReview" model="@Model" />
			<div>
				<br />
				<input type="submit" value="@Localizer["Create"]" class="btn btn-primary" />
			</div>
		</form>
	</div>
</div>
