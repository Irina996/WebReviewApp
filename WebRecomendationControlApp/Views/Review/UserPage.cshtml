@model IEnumerable<WebRecomendationControlApp.Models.Review>

@{
	ViewData["Title"] = "UserPage";
}

<h1>@Localizer["UserPage"]</h1>

<p>
	<a asp-controller="Review" asp-action="Create" asp-route-userId="@ViewBag.userId">
		<i class="fa fa-plus" aria-hidden="true"></i>
	</a>
</p>

<table class="table">
	<thead>
		<tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Group)
            </th>
            <th></th>
        </tr>
	</thead>
	<tbody>
		@foreach(var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Title)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Group.Name)
				</td>
				<td>
					<a asp-action="Edit" asp-route-id="@item.Id" class="text-decoration-none">
						<i class="fa fa-pencil" aria-hidden="true"></i>
					</a> |
					<a asp-action="Details" asp-route-id="@item.Id" class="text-decoration-none">
						<i class="fa fa-info-circle" aria-hidden="true"></i>
					</a> |
					<a asp-action="Delete" asp-route-id="@item.Id" class="text-decoration-none">
						<i class="fa fa-trash" aria-hidden="true"></i>
					</a>
				</td>
			</tr>
		}
	</tbody>
</table>